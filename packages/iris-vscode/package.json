{
  "name": "iris",
  "displayName": "IRIS",
  "description": "IRIS: progressive code understanding for developers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "iris.runAnalysis",
        "title": "IRIS: Run Analysis",
        "icon": "$(refresh)"
      },
      {
        "command": "iris.openSettings",
        "title": "IRIS: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "iris.exitFocusMode",
        "title": "IRIS: Exit Focus Mode"
      },
      {
        "command": "iris.navigatePreviousSegment",
        "title": "IRIS: Previous Segment"
      },
      {
        "command": "iris.navigateNextSegment",
        "title": "IRIS: Next Segment"
      }
    ],
    "keybindings": [
      {
        "command": "iris.exitFocusMode",
        "key": "escape",
        "when": "editorTextFocus && iris.blockSelected"
      },
      {
        "command": "iris.navigatePreviousSegment",
        "key": "ctrl+up",
        "when": "editorTextFocus && iris.blockSelected"
      },
      {
        "command": "iris.navigateNextSegment",
        "key": "ctrl+down",
        "when": "editorTextFocus && iris.blockSelected"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iris",
          "title": "IRIS",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "views": {
      "iris": [
        {
          "type": "webview",
          "id": "iris.sidePanel",
          "name": "Analysis Results",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "iris.runAnalysis",
          "when": "view == iris.sidePanel",
          "group": "navigation"
        },
        {
          "command": "iris.openSettings",
          "when": "view == iris.sidePanel",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "IRIS",
      "properties": {
        "iris.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze files when switching editors"
        },
        "iris.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authenticating with the IRIS backend"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@iris/core": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
